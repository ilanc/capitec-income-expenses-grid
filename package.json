{
  "name": "capitec-income-expenses-grid",
  "version": "1.0.0",
  "description": "Demo app for capitec test pilot",
  "main": "index.js",
  "scripts": {
    "check-packages": "npm outdated || true",
    "build": "npm-run-all build-static",
    "build-app": "webpack --progress --colors --display-modules --config src/webpack.config.js",
    "watch-app": "webpack --progress --colors --display-modules --config src/webpack.config.js --watch",
    "build-static": "rsync src/ dist/",
    "start": "live-server dist/",
    "deploy-surge": "surge dist capitec-test.cloudbank.co.za"
  },
  "author": "Ilan Copelyn",
  "license": "MIT",
  "devDependencies": {
    "babel-cli": "6.24.1",
    "babel-core": "6.24.1",
    "babel-loader": "6.2.10",
    "babel-preset-es2015": "6.24.1",
    "babel-preset-es2015-riot": "1.1.0",
    "css-loader": "0.28.4",
    "file-loader": "0.11.2",
    "font-awesome": "4.7.0",
    "html-webpack-plugin": "2.28.0",
    "npm-run-all": "3.1.2",
    "open": "0.0.5",
    "riot": "3.4.4",
    "riot-hot-reload": "1.0.0",
    "riot-tag-loader": "1.0.0",
    "style-loader": "0.18.2",
    "surge": "0.19.0",
    "webpack": "2.4.1",
    "webpack-dev-server": "2.4.5"
  },
  "dependencies": {
    "jquery": "3.2.1"
  }
}
